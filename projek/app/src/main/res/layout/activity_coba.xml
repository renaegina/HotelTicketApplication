<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/warnabtn"
    tools:context=".ListHotel">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/warnabg"
        android:backgroundTint="#FE9F2A"
        android:fontFamily="@font/poppins_bold"
        android:padding="8dp"
        android:text="List Kamar"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="normal|bold" />


    <androidx.cardview.widget.CardView
        android:id="@+id/single"
        android:layout_width="wrap_content"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="200dp"
        app:cardBackgroundColor="#1D1D1D"
        app:layout_constraintVertical_bias="0.166">


        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="top"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/single_room" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="bottom"
            android:text="Single Room"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/suite"
        android:layout_width="wrap_content"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="110dp"
        app:cardBackgroundColor="#1D1D1D"
        app:layout_constraintVertical_bias="0.166">


        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/suite_room" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:text="Suite Room"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/deluxe"
        android:layout_width="wrap_content"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="204dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#1D1D1D"
        app:layout_constraintVertical_bias="0.166">


        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="top"
            android:layout_marginLeft="20dp"
            android:src="@drawable/deluxe_room" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="bottom"
            android:text="Deluxe Room"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/family"
        android:layout_width="wrap_content"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="200dp"
        app:cardBackgroundColor="#1D1D1D"
        app:layout_constraintVertical_bias="0.166">


        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="top"
            android:layout_marginLeft="20dp"
            android:src="@drawable/family_room" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="bottom"
            android:text="Family Room"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/doubles"
        android:layout_width="wrap_content"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="206dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#1D1D1D"
        app:layout_constraintVertical_bias="0.166">


        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="top"
            android:layout_marginLeft="20dp"
            android:src="@drawable/double_room" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="bottom"
            android:text="Double Room"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/pesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="632dp"
        android:layout_marginEnd="38dp"
        android:backgroundTint="#FD9E2A"
        android:text="Pesan Sekarang" />

</RelativeLayout>